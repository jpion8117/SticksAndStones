@model SticksAndStones.Models.DAL.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
        <h5>Player Stats</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesPlayed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesPlayed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesWon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesWon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesLost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesLost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WinRate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WinRate)
        </dd>
    </dl>
        <h5>Ban Status</h5>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Banned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Banned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BanDate)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.BanDate == new DateTime())
            {
            }
            else
            {
                @Html.DisplayFor(model => model.BanDate)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BanMessage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BanMessage)
        </dd>
    </dl>
</div>
